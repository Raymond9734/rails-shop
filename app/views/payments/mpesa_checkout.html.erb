<section class="section payment-section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <div class="payment-card">
          <div class="payment-header">
            <h1 class="title is-3">M-Pesa Payment</h1>
            <p class="subtitle is-6">Complete your purchase securely with M-Pesa</p>
          </div>

          <div class="order-summary">
            <h3 class="title is-5">Order Summary</h3>
            <div class="summary-details">
              <div class="summary-row">
                <span>Subtotal</span>
                <span><%= number_to_currency(@cart.total_price) %></span>
              </div>
              <div class="summary-row total">
                <span>Total Amount</span>
                <span><%= number_to_currency(@cart.total_price) %></span>
              </div>
            </div>
          </div>

          <%= form_with(url: stkpush_path, local: true, class: "payment-form") do |f| %>
            <div class="field">
              <label class="label">Phone Number</label>
              <div class="control has-icons-left">
                <%= f.telephone_field :phoneNumber,
                    class: "input",
                    placeholder: "e.g., 0728457051",
                    pattern: "[0-9]{10}",
                    required: true,
                    value: "0728457051" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-phone"></i>
                </span>
              </div>
              <p class="help">Enter your phone number without the country code (e.g., 0728457051)</p>
            </div>

            <div class="field">
              <%= f.hidden_field :amount, value: @cart.total_price.to_i %>
              <%= f.submit "Pay with M-Pesa", 
                  class: "button is-primary is-fullwidth is-medium",
                  data: { 
                    disable_with: "Processing Payment..." 
                  } %>
            </div>
          <% end %>

          <div class="payment-info">
            <div class="info-item">
              <span class="icon has-text-success">
                <i class="fas fa-shield-alt"></i>
              </span>
              <span>Secure Payment</span>
            </div>
            <div class="info-item">
              <span class="icon has-text-info">
                <i class="fas fa-sync"></i>
              </span>
              <span>Real-time Processing</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 